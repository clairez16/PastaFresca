<div class="navbar-wagon">
  <!-- Logo -->
  <% if user_signed_in? %>
    <%= link_to noodles_path, class: "navbar-wagon-brand" do %>
      Pasta Fresca
    <% end %>
  <% else %>
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      Pasta Fresca
    <% end %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Au menu", noodles_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to "Passer commande", new_noodle_order_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Name with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <a class="dropdown-toggle navbar-wagon-link", id="navbar-wagon-menu", data-toggle="dropdown">
            <%= current_user.name %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Mon abonnement") %>
              <% end %>
            </li>
            <li>
              <%= link_to orders_path do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Historique de commandes") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "DÃ©connexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Signin link (when logged out) -->
      <%= link_to t(".sign_in", default: "Mon compte"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <!-- Signup link (when logged out) -->
      <%= link_to t(".sign_up", default: "Je m'inscris"), new_user_registration_path, class: "navbar-wagon-btn" %>
    <% end %>
  </div>
</div>
